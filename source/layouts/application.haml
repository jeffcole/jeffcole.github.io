!!!
%html
  %head
    %meta{charset: "utf-8"}
    %meta{content: "IE=edge,chrome=1", http: {equiv: "X-UA-Compatible"}}
    %meta{name: "viewport", content: "width=device-width, initial-scale=1"}
    %meta{name: "description", content: meta_description}
    %meta{name: "keywords", content: meta_keywords}

    %title= page_title
    %link{rel: "canonical", href: absolute_url}

    %link{href:'//fonts.googleapis.com/css?family=PT+Sans:400,700,400italic,700italic', rel: 'stylesheet', type: 'text/css'}
    %link{href:'//fonts.googleapis.com/css?family=Titillium+Web:400,400italic,600italic,600,700,700italic,900,300italic,300,200italic,200', rel: 'stylesheet', type: 'text/css'}

    = stylesheet_link_tag "application"
    = feed_tag :atom, "#{blog.options.prefix.to_s}/feed.xml", title: "Atom Feed"

  %body{class: "#{page_classes}"}
    %section.type-system-sans
      %header
        %h1.type
          = link_to "Things Jeff Cole Wrote", "/"

      %main{:role => "main"}
        = yield

      %footer
        %p.author= "Â© #{Date.today.year} Jeff Cole"

    = javascript_include_tag "https://code.jquery.com/jquery-2.1.1.min.js"
    = javascript_include_tag "application"
