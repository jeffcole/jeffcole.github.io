!!!
%html
  %head
    %meta{charset: "utf-8"}
    %meta{content: "IE=edge,chrome=1", http: {equiv: "X-UA-Compatible"}}
    %meta{name: "viewport", content: "width=device-width, initial-scale=1"}
    %meta{name: "description", content: meta_description}
    %meta{name: "keywords", content: meta_keywords}
    %meta{property: "og:title", content: page_title}
    %meta{property: "og:type", content: open_graph_type}
    %meta{property: "og:image", content: data.defaults.gravatar_url}
    %meta{property: "og:url", content: absolute_url}

    %title= page_title
    %link{rel: "canonical", href: absolute_url}

    %link{href: data.defaults.pt_sans_font_url, rel: 'stylesheet', type: 'text/css'}
    %link{href: data.defaults.titillium_font_url, rel: 'stylesheet', type: 'text/css'}

    = stylesheet_link_tag "application"
    = feed_tag :atom, "#{blog.options.prefix.to_s}/feed.xml", title: "Atom Feed"

  %body{class: "#{page_classes}"}
    .wrapper-for-content-outside-of-footer
      = partial "nav"

      %main.type-system-sans{:role => "main"}
        = yield

    %footer.footer-2{role: "contentinfo"}
      %ul
        %li
          %span= "Â© #{Date.today.year} Jeff Cole"

    = javascript_include_tag "https://code.jquery.com/jquery-2.1.1.min.js"
    = javascript_include_tag "application"
